<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ucf.assignments.TodoList_Controller">
   <children>
      <TableView fx:id="tableView" layoutX="-2.0" layoutY="104.0" onContextMenuRequested="#ItemSelectedMouse" prefHeight="294.0" prefWidth="600.0">
        <columns>
          <TableColumn fx:id="title" onEditCommit="#ChangeTitleCell" prefWidth="179.20001220703125" text="Title" />
          <TableColumn fx:id="description" onEditCommit="#ChangeDescriptionCell" prefWidth="221.59996032714844" text="Description" />
            <TableColumn fx:id="due_date" onEditCommit="#ChangeDueDateCell" prefWidth="187.20001220703125" text="Due Date" />
        </columns>
      </TableView>
      <ToolBar prefHeight="40.0" prefWidth="600.0">
        <items>
            <Button mnemonicParsing="false" onAction="#SaveButtonClicked" text="Save" />
            <MenuButton mnemonicParsing="false" text="Display">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#DisplayAllButtonClicked" text="All" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                <MenuItem mnemonicParsing="false" onAction="#DisplayIncompleteButtonClicked" text="Incomplete" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#DisplayCompletedButtonClicked" text="Completed" />
              </items>
            </MenuButton>
            <Button mnemonicParsing="false" onAction="#RemoveItemButtonClicked" text="Remove" />
        </items>
      </ToolBar>
      <TextField fx:id="titleTextField" layoutX="14.0" layoutY="54.0" promptText="Title" />
      <TextField fx:id="descriptionTextField" layoutX="175.0" layoutY="54.0" promptText="Description" />
      <DatePicker fx:id="dueDatePicker" layoutX="335.0" layoutY="54.0" promptText="Due Date" />
      <Button layoutX="525.0" layoutY="54.0" mnemonicParsing="false" onAction="#AddItemButtonClicked" text="Add" />
   </children>
</AnchorPane>
